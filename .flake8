[flake8]
max-line-length = 100
exclude = .git,__pycache__,dist,*.egg-info
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
ignore =
    # Line break before binary operator
    W503,
    # Line break after binary operator
    W504,
    # Module level import not at top of file (for conditional imports)
    E402
max-complexity = 10
